<ruleset name="MyCodingStandards">
    <file>/var/www/tests</file>
    <file>/var/www/html/wp-content/plugins/woocommerce-koban-sync</file>

    <exclude-pattern>/var/www/tests/bin</exclude-pattern>
    <exclude-pattern>/var/www/tests/.circle-ci</exclude-pattern>
    <exclude-pattern>/var/www/tests/vendor</exclude-pattern>

    <rule ref="WordPress"/>
    <rule ref="WordPress">
        <exclude-pattern>tests/*</exclude-pattern>
             <exclude name="WordPress.Security.EscapeOutput.OutputNotEscaped" />
             <exclude name="Generic.Files.OneObjectStructurePerFile" />
             <exclude name="Squiz.Commenting.InlineComment.InvalidEndChar" />
    </rule>
</ruleset>